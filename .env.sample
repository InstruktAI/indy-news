# API Authentication
API_KEY=your-secret-api-key-here

# Python Debugger Configuration
PYDEVD_CONTAINER_RANDOM_ACCESS_MAX_ITEMS=1000

# X/Twitter Service Credentials
SVC_USERNAME=your-x-username
SVC_EMAIL=your-x-email@example.com
SVC_PASSWORD=your-x-password
EMAIL_PASSWORD=your-email-app-password

# X/Twitter Cookies (static fallback)
# Format: cookie1=value1; cookie2=value2; ...
SVC_COOKIES='kdt=...; lang=en; auth_token=...; ct0=...; twid=...'

# Cookie Service API Key
COOKIE_SERVICE_API_KEY=your-cookie-service-api-key

# Cookie Service URLs
